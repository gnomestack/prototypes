{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "resolveJsonModule": true,
      "preserveSymlinks": true,
      "declaration": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "isolatedModules": true,
      "downlevelIteration": true,
    },
    "exclude": [
      "scripts",
      "dist",
      "**/*_test.ts",
    ]
  }